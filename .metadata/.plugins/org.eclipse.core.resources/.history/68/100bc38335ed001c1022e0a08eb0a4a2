package com.varxyz.jv200.mod007;

public class Libary {
	
	private Libary() {
		
	}
	
	Book book;
	int bookSave = 100;
	int bookSaveX = bookSave * 2;
	int [] serial = new int[0];
	int count = 0;
	
	public int[] getBook() {
		return serial;
	}
	
	public void setBook(int[] serial) {
		serial = this.serial;
		
		for (int i = 0; i < serial.length; i++) {
			count += serial[i];
		}
		
				if ( serial < bookSave ) {
			bookSave = bookSaveX;
			System.out.println(bookSave);
		}
	}
	
	public void addBook(Book book) {
		book = this.book;
	}

}


