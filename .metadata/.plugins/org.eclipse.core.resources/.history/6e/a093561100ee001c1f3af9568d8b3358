package com.varxyz.jv200.mod007;

public class LeastCommonMultiple {	// LeastCommonMultiple는 클래스명
	public int CommonMultiple(int num) {	// CommonMultiple는 메소드명
		int tempNum = num;	// 파라미터로 받는 숫자를 tempNum에 넣음
		int quotient = 0;
		for (int i = 2; i < num; i++) {
			if( tempNum % i == 0 ) {
				quotient = i;
				System.out.println(tempNum+"(을)를");
				tempNum = tempNum / quotient;
				System.out.println(quotient+"로 나눔");
				System.out.println("마지막값"+tempNum+"\n");
				i = 1;
				if( tempNum > 1 ) {
					System.out.println(quotient + "X");
				}
				if( tempNum == 1) {
					System.out.println(quotient+"="+num);
				}
			}
		}
		return num;
	}
}
